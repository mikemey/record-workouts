{
  "name": "workout-records",
  "version": "1.5.0",
  "description": "Workout Records backend",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prestart": "npm install",
    "start": "node index.js",
    "production": "NODE_ENV=PROD npm start",
    "lint": "standard && eslint --ignore-path ../.gitignore .",
    "be-test": "mocha 'test/**/**.spec.js' -r chai/register-should",
    "test": "npm run lint -s && npm run be-test -s",
    "test-watch": "nodemon -x 'npm run be-test -s'"
  },
  "repository": {},
  "author": "mikemey",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "fs-extra": "^9.0.0",
    "moment": "^2.24.0",
    "mongodb": "^3.5.5",
    "morgan": "^1.10.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "standard": "^14.3.3",
    "supertest": "^4.0.2"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "globals": [
      "$",
      "describe"
    ]
  }
}
